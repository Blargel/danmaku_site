- if @project.soft_deleted

  .page-header
    %h1
      = h(@project.title)
  %h2
    This project is no longer available.
  %br
  %p
    This project has been deleted for the following reason:
  %p
    = h(@project.deleted_reason)

- else

  = render :partial => 'management_toolbar', :locals => {:user => @user, :project => @project}

  %section#project-show
    .page-header
      %h1
        = h(@project.title)
        %small
          version
          = h(@project.version_number)

    %ul.nav.nav-tabs
      %li.active
        %a{ :href => "#details", :"data-toggle" => "tab" }
          Details
      %li
        %a{ :href => "#images", :"data-toggle" => "tab" }
          Images
      %li
        %a{ :href => "#video", :"data-toggle" => "tab" }
          Video

    .tab-content
      #details.tab-pane.active
        = render :partial => "details", :locals => {:user => @user, :project => @project}

      #images.tab-pane
        = render :partial => "images", :locals => {:project => @project}

      #video.tab-pane
        = render :partial => "youtube", :locals => {:project => @project}
