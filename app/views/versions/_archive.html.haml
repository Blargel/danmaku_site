- if version.archive
  = link_to "Download", user_project_version_archive_path(user, project, version), :class => "btn btn-primary"
  %br
  %strong File Size:
  = number_to_human_size(version.archive.attachment_file_size)
  %br
- elsif can?(:update, version)
  %h4
    Upload your script now!
  %p
  File size limit is
  = Archive::MAX_FILE_SIZE
  \.
  %br
  Accepted file types are .zip, .rar, .7z, .tar, and .dat.
  %br
  %br
  #s3-swf-upload-bar
    .progress.progress-striped.active
      .bar
  = s3_swf_upload_area("archives/" + version.id.to_s + "/")
  %input{:type => "submit", :id => "s3-swf-upload-start", :value => "Upload", :onclick => "s3_swf_1_object.startUploading();", :class => "btn", :style => "margin-top:-20px"}

- else
  The author has not uploaded a script for this version.
  %br
  Please check back later.
:javascript
  version_id = '#{version.permalink}';
  project_id = '#{project.permalink}';
  user_id = '#{user.permalink}';