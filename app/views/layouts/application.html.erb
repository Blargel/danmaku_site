<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <title>BulletForge</title>
  <%= javascript_include_tag :defaults, :swf_upload %>
</head>

<body>
  <div id="header" class="container">
    <% if current_user %>
      Logged in as <%= link_to current_user.login, user_path(current_user) %><br/>
      <%= link_to "Log Out", logout_path%> |
      <%= link_to "New Project", new_user_project_path(current_user)%><br />
    <% else %>
      <%= link_to "Login", login_path %> |
      <%= link_to "Register", new_user_path%><br />
    <% end %>

    <% form_for :search, :url => projects_path do |f| %>
      <%= f.label :title_like, "Keyword" %>
      <%= f.hidden_field :title_like %>
      <%= f.hidden_field :user_login_like %>
      <%= f.hidden_field :tagged_with %><br />
      <%= label_tag :search_type, "Search by:" %>
      <%= select_tag :search_type, options_for_select([['Title', 'title'], ['Username', 'username'], ['Tags', 'tags']], params[:search_type]) %><br />
      <%= f.submit "Search" %>
    <% end %>
  </div>

  <div id="content">
      <% if flash[:notice] %>
      <div class="flash notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:error] %>
      <div class="flash errors"><%= flash[:error] %></div>
      <% end %>
      <%= yield %>
    </div>
</body>
</html>
