%ul.nav.pull-right
  - if can? :destroy, UserSession
    %li= link_to current_user.login, user_path(current_user)
    %li= link_to "Log Out", logout_path
    - if can?(:create, current_user.projects.build)
      %li= link_to("New Project", new_user_project_path(current_user))

  - if can? :create, UserSession
    %li= link_to "Login", login_path
    %li= link_to "Register", new_user_path
