<div class="project-index-block">
  <div class="project-left">
    <%= link_to p.title, user_project_path(p.user, p) %><br/>
    by <%= link_to p.user.login, user_path(p.user) %><br/>
    <br/>
    Downloads: <%= p.downloads %><br/>
    Rating: <%= p.rating %>
  </div>
  <div class="project-right">
    <% if p.versions.last %>
      Latest version: <%= p.versions.last.version_number %><br/>
    <% else %>
      No versions<br/>
    <% end %>
    <br/>
    <% if p.versions.last && !p.versions.last.description.blank? %>
      <%= truncate p.versions.last.description, 250 %><br/>
    <% else %>
      No description<br/>
    <% end %>
    <br/>
    <% if p.tags %>
      Tags:
      <% p.tags.each do |tag| %>
        <%= link_to tag.name, projects_path(:search => {:tagged_with => tag.name}, :search_type => :tags) %>
      <% end %>
    <% else %>
      No description
    <% end %>
  </div>
  <br style="clear:both" />
</div>