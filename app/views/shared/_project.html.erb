<div class="project-index-block">
  <div class="project-top">
    <div class="title">
      <%= link_to p.title, user_project_path(p.user, p) %>
    </div>
    <div class="stats">
      Downloads: <%= p.downloads %>
      Rating: <%= p.rating %>
    </div>
  </div>
  <div class="project-bottom">
    Author: <%= link_to p.user.login, user_path(p.user) %><br/>
    
    <% if p.versions.last %>
      Latest version: <%= p.versions.last.version_number %><br/>
    <% else %>
      No versions<br/>
    <% end %>

    <br/>

    <% if p.versions.last && !p.versions.last.description.blank? %>
      <p><%= truncate p.versions.last.description, 512 %></p>
    <% else %>
      <p>No description</p>
    <% end %>

    Category: <%= p.category.name %> |

    <% if p.tags %>
      Tags:
      <% p.tags.each do |tag| %>
        <%= link_to tag.name, projects_path(:search => {:tagged_with => tag.name}, :search_type => :tags) %>
      <% end %>
    <% else %>
      No description
    <% end %>
  </div>
</div>